                <Scripts>
                    <OnLoad>
                            this:RegisterForClicks("RightButtonUp")
                            this:RegisterForDrag("LeftButton")
                            this:SetClampedToScreen(true)
                            this:RegisterEvent("PLAYER_LOGIN")
                    </OnLoad>
                    <OnDragStart>
                            this:LockHighlight()
                            this:StartMoving()
                    </OnDragStart>
                    <OnDragStop>
                            this:UnlockHighlight()
                            this:StopMovingOrSizing()
                            TMOG_POSITION = {this:GetCenter()} 
                    </OnDragStop>
                    <OnEnter>
                            GameTooltip:SetOwner(this, "ANCHOR_TOPLEFT", 0, 0)
                            GameTooltip:AddLine('Tmog', 1, 1, 1)
                            GameTooltip:AddLine('Left-click to toggle frame\nHold Left-click and drag to move this button')
                            GameTooltip:Show()
                    </OnEnter>
                    <OnLeave>
                            GameTooltip:Hide()
                    </OnLeave>
                    <OnMouseUp>
                            if arg1 == "LeftButton" then
                                TmogFrame_Toggle()
                            end
                            CloseDropDownMenus()
                    </OnMouseUp>
                    <OnEvent>
                        if event then
                            if event == "PLAYER_LOGIN" then
                                this:ClearAllPoints()
                                this:SetPoint('CENTER', UIParent, 'BOTTOMLEFT', unpack(TMOG_POSITION or {this:GetCenter()}))
                            end
                        end
                    </OnEvent>
                </Scripts>
            </Button>

